<h2>Search News</h2>

<% form_tag index_url, :method => :post do %>
	<input type="text" name="q" value="<%= @q if @q %>" />
	<input type="submit" value="Search" class="button" />
<% end %>
<br />
<% if @rss %>
	<% for item in @rss %>
		<%= link_to item.title, item.link %><br />
		<%= item.description %><br />
	<% end %>
<% end %>